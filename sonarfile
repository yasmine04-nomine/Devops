pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps { checkout scm }
    }

    stage('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('sonarqube') {   // keep this name exactly as in Jenkins config
          sh 'chmod +x mvnw || true'
          sh './mvnw -B clean verify sonar:sonar'
        }
      }
    }
  }
}
